{
  "extends": "@vtex/tsconfig",
  "compilerOptions": {
    "noEmitOnError": false,
    "lib": ["dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2017",
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["./src/Assets/*"],
      "@assets": ["./src/Assets"],
      "@components/*": ["./src/Components/*"],
      "@components": ["./src/Components"],
      "@graphql/*": ["./src/GraphQL/*"],
      "@graphql": ["./src/GraphQL"],
      "@hooks/*": ["./src/Hooks/*"],
      "@hooks": ["./src/Hooks"],
      "@services/*": ["./src/Services/*"],
      "@services": ["./src/Services"],
      "@types/*": ["./src/Typings/*"],
      "@types": ["./src/Typings"]
    }
  },
  "include": ["./Typings/*.d.ts", "./**/*.tsx", "./**/*.ts"]
}
